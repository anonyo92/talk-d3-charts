// Styles

// Grey
color_grey_light  = #F5F5F5
color_grey_medium = #AEAEAE
color_grey_dark   = #333

// Colors
color_pink = #E64C66
color_navy = #2D3E50
color_teal = #1BBC9B

// Box Sizing
*
  box-sizing border-box

// Global styles
body
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size 14pt
  color color_grey_dark

  background-color color_grey_light

// Containers and centering
.container
  display flex
  justify-content center

.content
  flex 0 1 auto
  max-width 960px

// Headers
h1, h2
  color color_navy

h3, h4, h5, h6
  color darken(color_teal, 10%)

// Links
a
  color color_teal